<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
<variable
    name="VmZiker"
    type="com.example.muslim.ui.ziker.zikerContent.ZikerContentViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.ziker.zikerContent.ZikerContentActivity">

        <ImageView
            android:id="@+id/back_press_zekr"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/arrow_back_ios"
            android:adjustViewBounds="true"
            android:layout_marginTop="12dp"
            android:layout_marginStart="14dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/zekr_name"
            android:layout_width="104dp"
            android:layout_height="27dp"
            android:layout_marginTop="47.81dp"
            android:layout_marginEnd="20dp"
            android:fontFamily="@font/inter_extrabold"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="أذكار الصباح" />
        <View
            android:id="@+id/upper_view"
            android:layout_width="358dp"
            android:layout_height="2dp"
            android:background="@color/black"
            android:layout_marginTop="10dp"
            android:layout_marginStart="33dp"
            app:layout_constraintTop_toBottomOf="@id/zekr_name"
            app:layout_constraintStart_toStartOf="parent" />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/Recycler_zekr_content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/upper_view"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:listitem="@layout/item_zekr_content"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>