<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.motion.widget.MotionLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.fragments.quran.quranCategories.quranCategoryContainer.QuranContainerFragment"
        tools:ignore="MotionLayoutInvalidSceneFileReference">

        <TextView
            android:id="@+id/topTitleTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="1dp"
            android:gravity="center"
            android:fontFamily="@font/al_qalam"
            android:text="@string/al_quran_ar"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@color/transparent"
            android:scrollbars="vertical"/>



        <com.google.android.material.tabs.TabLayout
           android:id="@+id/fragQuranContainer_tablayout"
            android:layout_width="match_parent"
            android:layout_height="45.00dp"
            android:layout_margin="10.00dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/topTitleTV"
            app:tabSelectedTextColor="@color/color_dark"
            app:tabGravity="fill" />


        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/quranHome_viewpager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:clipToPadding="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fragQuranContainer_tablayout" />
    </androidx.constraintlayout.motion.widget.MotionLayout>

</layout>
