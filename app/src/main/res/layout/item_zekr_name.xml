<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="item"
            type="com.example.muslim.model.ziker.ZikerNames" />
    </data>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_zekr"
        android:layout_width="167dp"
        android:layout_height="66dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:cardCornerRadius="12dp"
        android:background="#ffffff"
        android:padding="16dp"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="26dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/image_zekr"
                android:layout_width="49dp"
                android:layout_height="49dp"
                tools:src="@drawable/adzan"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:adjustViewBounds="true"
                android:layout_marginStart="12dp"
                android:layout_marginBottom="7dp"
                android:layout_marginTop="8dp"
                 />

            <TextView
                android:id="@+id/title_zekr"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="4dp"
                android:fontFamily="@font/inter_bold"
                android:maxLines="2"
                android:text="@{item.category}"
                android:textColor="#42A5FF"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@id/image_zekr"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/image_zekr"
                app:layout_constraintTop_toTopOf="@id/image_zekr"
                tools:text="أذكار الاستيقاظ من النوم" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>
</layout>